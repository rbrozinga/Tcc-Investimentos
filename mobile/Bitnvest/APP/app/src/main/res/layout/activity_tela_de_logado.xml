<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TelaDeLogado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".TelaDeLogado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_altadefinicao" />

    <TextView
        android:id="@+id/saldo"
        android:layout_width="97dp"
        android:layout_height="39dp"
        android:layout_marginStart="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Saldo:"
        android:layout_marginTop="70dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="305dp" />


    <TextView
        android:id="@+id/saldoCliente"
        android:layout_width="match_parent"
        android:layout_marginStart="125dp"
        android:layout_marginTop="-40dp"
        android:layout_height="match_parent"
        android:text="R$ 0,00 "
        android:textColor="@color/Green"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="304dp" />

        <TextView
            android:id="@+id/totalInvestido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="Saldo total investido:"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="398dp"
            android:layout_marginTop="55dp"
            />

        <TextView
            android:id="@+id/saldoInvestido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="R$ 0,00"
            android:textColor="@color/Green"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="460dp"/>

    </LinearLayout>>

</ScrollView>

